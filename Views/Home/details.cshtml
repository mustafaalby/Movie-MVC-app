@model Movies
<div class="row">
    <div class="col-md-3">
      
      @await Component.InvokeAsync("CategoryMenu")
    </div>
       <div class="col-md-9">
           <div class="card-mb-3">
               <div class="card-body">
                   <div class="raw no-gutter">
                        <div class="col-md-4">
                            <img src="~/images/@Model.ImageUrl" alt="@Model.Description" class="card-img">
                        </div>
                        <div class="col-md-8">
                            
                                <h5 class=" card-title">
                                <a asp-action="Details" asp-controller="Home" asp-route-id="@Model.id">@Model.Name</a>
                                </h5>
                                <p class="card-text">@Model.Description</p>
                                <p class="card-text"> 
                                <small class="text-muted"> 3 days ago</small>
                                </p>

                        </div>
                   </div>
               </div>
           </div>
       </div>
</div>